{% import "_includes/forms" as forms %}

{% includeCssResource "helpscoutbeacon/css/HelpscoutBeacon_Style.css" %}
{% includeJsResource "helpscoutbeacon/js/HelpscoutBeacon_Script.js" %}


{{ forms.textField({
    label: "Beacon Form Id"|t,
    instructions: "Enter the ID for your Helpscout Beacon here"|t,
    id: 'beaconFormId',
    name: 'beaconFormId',
    value: settings['beaconFormId']})
}}

{{ forms.selectField({
    label: "Beacon Icon"|t,
    id: 'beaconIcon',
    name: 'beaconIcon',
    value: settings['beaconIcon'],
    options: {
        'message' : "Message",
        'buoy' : "Bouy",
        'question': "Question",
        'beacon': "Beacon",
        'search': "Search"
    }})
}}

{{ forms.selectField({
    label: "Beacon Options"|t,
    id: 'beaconOptions',
    name: 'beaconOptions',
    value: settings['beaconOptions'],
    options: {
        'contact' : "Contact Form",
        'knowledgebase' : "Knowledge base search",
        'contact_docs': "Contat form & knowledge base"
    }})
}}
